
<div class="auth-bg">
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-12 col-sm-10 col-md-7 col-lg-5 col-xl-4">
      <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5 auth-card">

        <div class="text-center mb-4">
          <h3 class="fw-semibold mb-1">Log in to your account</h3>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="mb-3">
            <%= f.label :email, class: "form-label small text-muted mb-1" %>
            <%= f.input_field :email,
                  required: false,
                  autofocus: true,
                  autocomplete: "email",
                  class: "form-control form-control-lg rounded-3" %>
          </div>

          <div class="mb-2">
            <%= f.label :password, class: "form-label small text-muted mb-1" %>
            <%= f.input_field :password,
                  required: false,
                  autocomplete: "current-password",
                  class: "form-control form-control-lg rounded-3" %>
          </div>

          <div class="d-flex justify-content-between align-items-center mb-4">
            <% if devise_mapping.rememberable? %>
              <div class="form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label small" %>
              </div>
            <% end %>
          </div>

          <div class="d-grid mb-3">
            <%= f.button :submit, "Log in",
                  class: "btn btn-dark btn-lg rounded-3" %>
          </div>
        <% end %>

        <div class="mt-4 text-center small">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
