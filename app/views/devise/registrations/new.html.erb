
<div class="auth-bg">
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-12 col-sm-10 col-md-7 col-lg-5 col-xl-4">
      <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5 auth-card">

        <div class="text-center mb-4">
          <h3 class="fw-semibold mb-1">Create your account</h3>
        </div>

        <%= simple_form_for(resource,
              as: resource_name,
              url: registration_path(resource_name)) do |f| %>

          <div class="mb-3">
            <%= f.error_notification if defined?(f) %>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label small text-muted mb-1" %>
            <%= f.input_field :email,
                  required: true,
                  autofocus: true,
                  autocomplete: "email",
                  input_html: { autocomplete: "email" },
                  class: "form-control form-control-lg rounded-3" %>
          </div>

          <div class="mb-3">
            <div class="d-flex justify-content-between align-items-end">
              <%= f.label :password, class: "form-label small text-muted mb-1" %>
              <% if @minimum_password_length %>
                <small class="text-muted">
                  (<%= @minimum_password_length %> characters minimum)
                </small>
              <% end %>
            </div>
            <%= f.input_field :password,
                  required: true,
                  autocomplete: "new-password",
                  input_html: { autocomplete: "new-password" },
                  class: "form-control form-control-lg rounded-3" %>
          </div>

          <div class="mb-4">
            <%= f.label :password_confirmation, class: "form-label small text-muted mb-1" %>
            <%= f.input_field :password_confirmation,
                  required: true,
                  autocomplete: "new-password",
                  input_html: { autocomplete: "new-password" },
                  class: "form-control form-control-lg rounded-3" %>
          </div>

          <div class="d-grid mb-3">
            <%= f.button :submit, "Sign up",
                  class: "btn btn-dark btn-lg rounded-3" %>
          </div>
        <% end %>

        <div class="mt-3 text-center small">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
