
<div class="mb-4">
  <h5><i class="fa-solid fa-clock-rotate-left"></i> Histroy</h5>
  <% if user_signed_in? %>
    <% if current_user.chats.any? %>
      <ul>
        <% current_user.chats.each do |chat| %>
          <li><%= link_to chat.title, chat_path(chat) %><%= link_to chat_path(chat),
                data: { turbo_method: :delete, turbo_confirm: "Delete this chat?" } do %>
                    <i class="fa-solid fa-trash" style="color: #ffffff;"></i>
                <% end %></li>
        <% end %>
      </ul>
    <% else %>
      There are no chats yet.
    <% end %>
  <% end %>
</div>
